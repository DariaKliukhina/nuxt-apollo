@import './vendor/normalize.styl';


body {
  min-height: 100vh;
  background: white;
  color: black;
  font-weight: normal;
  font-size: 1.6rem;
  font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}

svg {
  display: block;
  width: 100%;
  height: 100%;
}

a,
button {
  user-select none
  -webkit-tap-highlight-color: transparent

  &:focus {
    outline: none;
    border: 2px solid red
  }
}

[v-cloak] {
  display: none
}

.visually_hidden {
  position absolute!important
  overflow hidden!important
  clip rect(0 0 0 0)
  height 1px!important
  width 1px!important
  margin -1px!important
  padding 0!important
  border 0!important
}
